<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/labeltitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:text="@string/modifyplace"/>
    
    <TextView
        android:id="@+id/labelmodifyplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labeltitle"
        android:text="@string/entername" />
    
    <EditText
        android:id="@+id/entrymodifyplace"
        android:inputType="text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/labelmodifyplace"/>
    
    <TextView
        android:id="@+id/labelmodifyaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enteraddr"
        android:layout_below="@+id/entrymodifyplace" />
    
    <EditText
        android:id="@+id/entrymodifyaddress"
        android:inputType="text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:textColor="#000000"
        android:layout_marginBottom="40dp"
        android:layout_below="@+id/labelmodifyaddress"/>
    
    
    <TextView
        android:id="@+id/labelcontacthome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/entrycontacthome"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/entrymodifyaddress" />
    
    <TextView
        android:id="@+id/labelmodifycontacthome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contacthome"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/labelcontacthome" />
    
    
    
    <Button
        android:id="@+id/button_set_home_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelmodifycontacthome"
        android:gravity="center"
        android:text="@string/sethomeaddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="40dp" />
    
    <Button
        android:id="@+id/button_confirm_modif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_set_home_addr"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/modify" />

    <Button
        android:id="@+id/button_suppr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_confirm_modif"
        android:gravity="center"
        android:text="@string/suppr_place" />
    
</RelativeLayout>